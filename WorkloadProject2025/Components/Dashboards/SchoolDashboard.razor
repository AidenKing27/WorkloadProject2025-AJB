@page "/schooldashboard"

@inject IJSRuntime JS
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<PageTitle>School Dashboard</PageTitle>

<MudCard Class="mx-auto mt-6" Style="max-width: 1400px;">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h4" Class="font-semibold">School Dashboard</MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>
        <!-- Top KPI row -->
        <MudGrid Class="mb-3">
            <MudItem Xs="12" Sm="6" Md="3">
                <MudPaper Class="pa-4" Elevation="1">
                    <MudText Typo="Typo.caption">Programs</MudText>
                    <MudText Typo="Typo.h5">@totalPrograms</MudText>
                </MudPaper>
            </MudItem>

            <MudItem Xs="12" Sm="6" Md="3">
                <MudPaper Class="pa-4" Elevation="1">
                    <MudText Typo="Typo.caption">Total Students</MudText>
                    <MudText Typo="Typo.h5">@totalStudents</MudText>
                </MudPaper>
            </MudItem>

            <MudItem Xs="12" Sm="6" Md="3">
                <MudPaper Class="pa-4" Elevation="1">
                    <MudText Typo="Typo.caption">Avg Courses / Program</MudText>
                    <MudText Typo="Typo.h5">@avgCoursesPerProgram.ToString("F1")</MudText>
                </MudPaper>
            </MudItem>

            <MudItem Xs="12" Sm="6" Md="3">
                <MudPaper Class="pa-4" Elevation="1">
                    <MudText Typo="Typo.caption">Avg Faculty Load (hrs)</MudText>
                    <MudText Typo="Typo.h5">@avgFacultyWorkload.ToString("F1")</MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>

        <!-- Filters row (Program select + search + export) -->
        <MudPaper Class="pa-4 mb-4" Elevation="0">
            <MudGrid AlignItems="Center">
                <MudItem Xs="12" Sm="5" Md="4">
                    <MudSelect T="string" Label="Program" @bind-Value="SelectedProgram" Dense="true" Variant="Variant.Outlined">
                        <MudSelectItem Value="@("All")">All Programs</MudSelectItem>
                        @foreach (var p in programNames)
                        {
                            <MudSelectItem Value="@p">@p</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem Xs="12" Sm="5" Md="5">
                    <MudTextField @bind-Value="searchTerm"
                                  Placeholder="Search program or course..."
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Filled.Search"
                                  Immediate="true"
                                  OnInput="OnSearchInput" />
                </MudItem>

                <MudItem Xs="12" Sm="2" Md="3" Class="d-flex justify-end">
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="ExportCsv" StartIcon="@Icons.Material.Filled.FileDownload" Disabled="@(programModels == null || !programModels.Any())">
                        Export CSV
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudPaper>

        <!-- Charts row: Pie (enrolment), Bar (courses), Line (enrollment trend) -->
        <MudGrid>
            <MudItem Xs="12" Md="4">
                <MudPaper Class="pa-4" Elevation="1">
                    <MudText Typo="Typo.h6">Students by Program</MudText>
                    @if (deptPieSeries.Any())
                    {
                        <MudPaper Class="pa-4 mt-3 d-flex justify-center">
                            <MudChart ChartType="ChartType.Pie" ChartSeries="@deptPieSeries" XAxisLabels="@deptPieLabels" Width="320px" Height="320px" />
                        </MudPaper>
                    }
                    else
                    {
                        <MudText Typo="Typo.body2" Class="text-secondary mt-3">No data</MudText>
                    }
                </MudPaper>
            </MudItem>

            <MudItem Xs="12" Md="4">
                <MudPaper Class="pa-4" Elevation="1">
                    <MudText Typo="Typo.h6">Courses by Program</MudText>
                    @if (coursesBarSeries.Any())
                    {
                        <MudChart ChartType="ChartType.Bar" ChartSeries="@coursesBarSeries" XAxisLabels="@coursesBarLabels" Width="100%" Height="280px" />
                    }
                    else
                    {
                        <MudText Typo="Typo.body2" Class="text-secondary mt-3">No data</MudText>
                    }
                </MudPaper>
            </MudItem>

            <MudItem Xs="12" Md="4">
                <MudPaper Class="pa-4" Elevation="1">
                    <MudText Typo="Typo.h6">Enrollment Trend (sample)</MudText>
                    @if (trendSeries.Any())
                    {
                        <MudChart ChartType="ChartType.Line" ChartSeries="@trendSeries" XAxisLabels="@trendLabels" Width="100%" Height="280px" />
                    }
                    else
                    {
                        <MudText Typo="Typo.body2" Class="text-secondary mt-3">No data</MudText>
                    }
                </MudPaper>
            </MudItem>
        </MudGrid>

